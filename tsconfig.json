{
  "defaultSeverity": "none",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@packages/*": ["./packages/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "node_modules/vue-tsc/typescript/lib/lib.es5.d.ts"
  ]
}
